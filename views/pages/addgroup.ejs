<!DOCTYPE html>
<html>
<head>
	<link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
	<link rel="SHORTCUT ICON" type="image/x-icon" href="images/favicon-32x32.ico" />
    <title>Sign up</title>
    <link href="css/signup.css" type="text/css" rel="stylesheet" />
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
	<script type="text/javascript">
	function validateForm(){
		var pw1 = document.forms["signup"]["password"].value;
		var pw2 = document.forms["signup"]["re_password"].value;
		if (pw1 != pw2) {
			alert("Passwords do not match!");
			return false;
		}
	}
	</script>
</head>
<body>
    <!-- start header div -->
	<header><% include ../partials/header1 %></header>
    <!-- end header div -->
	<div class="outer">
    <!-- start wrap div -->
		<div class="wrap">
        <!-- title and description -->
        <h3>CREATE NEW ACTIVITY NOW!</h3>
        <!-- start sign up form -->
        <form name="signup" action="http://localhost:3000/register" method="post" onsubmit="return validateForm()">
            <label for="topic">Activity Title:</label>
            <input type="text" name="topic" value="" required/>
            <label for="date">Date:</label>
            <input type="date" name="date" value="" required/>
			
			<label for="route">Route:</label>
			<% for(var i=0; i < data.length; i++) { %>
				<label for="<%= data[i].trail_id %>"><input type="radio" name="route" value="<%= data[i].trail_id %>" id="<%= data[i].trail_id %>" required/><%= data[i].trail_name %></input></label>
			<% } %>
			<br>
            <label for="description">Description:</label>
            <textarea type="text" name="description" value="" placeholder="Describe your activity..."></textarea>
			<font color="red">Wanna search for other activity? Click <a href="/group">here</a></font><br><br>
            <input type="submit" name="sent" class="submit_button" value="CREATE" />
        </form>
        <!-- end sign up form -->
		</div></div>
    <!-- end wrap div -->
</body>
</html>